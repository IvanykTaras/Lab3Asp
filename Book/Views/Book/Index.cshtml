@model List<BookViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table"> 
  <tbody>
    @foreach(BookViewModel book in Model){


            
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.DateOfPublication</td>
                <td>@book.Author</td>
                        <td> <div class="border border-success text-success" style="text-align:center;border-radius: 10px; margin: 5px;">@book.Types</div>    </td>
                <td>@book.Price</td>
		    <td>
                <a class="btn btn-primary" asp-controller="Book" asp-action="BookEdit" asp-route-id="@book.Id">Edit</a>
                <a class="btn btn-danger" asp-controller="Book" asp-action="BookDelete" asp-route-id="@book.Id">Delete</a>
            </td>
		    
        </tr>
    }
  </tbody>
</table>