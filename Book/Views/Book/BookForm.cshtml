@{
}
<form asp-controller="Book" asp-action="BookForm" method="post">
  <div asp-validation-summary="All"></div>
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input type="text" class="form-control" asp-for="Title">
  </div>
  <div class="mb-3">
    <label class="form-label">Date of publish</label>
    <input type="date" class="form-control" asp-for="DateOfPublication">
  </div>
  <div class="mb-3">
    <label class="form-label">Author</label>
    <input type="text" class="form-control" asp-for="Author">
  </div>
  <div class="mb-3">
    <label class="form-label">Types</label><br />
    <select asp-for="Types" asp-items="@Html.GetEnumSelectList<BookType>()"></select>
  </div>
  <div class="mb-3">
    <label class="form-label">Price</label><br />
    <input type="number" asp-for="Price"/>
  </div>



  <button type="submit" class="btn btn-primary" asp-controller="Book" asp-action="BookForm">Submit</button>
</form>